<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Button}"  x:Key="BTStyle">
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Background" Value="#B23C72BB"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Height" Value="35" />
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="BorderBrush" Value="#7F311D50"></Setter>
        <Setter Property="FontFamily" Value="Montserrat"></Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#B23C72BB"/>
            </Trigger>
        </Style.Triggers>
     
    </Style>
    <Style TargetType="TextBox" x:Key="TBStyleClient">
        <Setter Property="Background" Value="#B23C72BB"></Setter>
        <Setter Property="Foreground" Value="#CBB3FF"></Setter>
        <Setter Property="VerticalContentAlignment" Value="center"></Setter>
        <Setter Property="Height" Value="35"></Setter>
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="BorderBrush" Value="#7F311D50"></Setter>
        <Setter Property="Padding" Value="10,0,0,0"></Setter>
    </Style>
</ResourceDictionary>

